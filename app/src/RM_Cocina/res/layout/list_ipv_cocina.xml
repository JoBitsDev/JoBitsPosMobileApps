<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:hint="Nombre"
        android:textColor="@color/secundario"
        android:textSize="@dimen/textSizeLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Inicio"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextEntrada"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Entrada"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextDisponible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Disponible"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextCosumido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Cosumido"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextFinal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="Final"
            android:textColor="@color/secundario"
            android:textSize="@dimen/textSizeMedium" />

    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:background="@color/secundario" />
</LinearLayout>