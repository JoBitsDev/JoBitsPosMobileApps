<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/especifico_app_primario"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageButton
            android:id="@+id/adjuntoButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="onAdjuntoClick"
            android:src="@drawable/adjunto" />


        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="onAddClick"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/removeButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="onRemoveClick"
            android:src="@drawable/minus"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textCantidad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text="Cantidad"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cantidades"
            android:textSize="@dimen/textSizeNormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPrecio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:gravity="end"
            android:paddingLeft="20dp"
            android:text="Precio"
            android:textColor="@color/precios"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>


</LinearLayout>