<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/initializeSesionButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeH1" />

    <Button
        android:id="@+id/initializeSesionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:enabled="true"
        android:text="Iniciar sesión"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeNormal" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeSmall" />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/version"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:enabled="true"
        android:onClick="startService"
        android:text="Activar Notificaciones"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeNormal" />

    <TextView
        android:id="@+id/connectionStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Estado Conexión"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#19ff00"
        android:textSize="@dimen/textSizeSmall" />


</RelativeLayout>
