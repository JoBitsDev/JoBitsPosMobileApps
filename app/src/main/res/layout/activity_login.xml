<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primario"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:text="Auntenticar"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/MainTitle" />


        <EditText
            android:id="@+id/user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:hint="username"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/textSizeNormal" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="#ffffff"
            android:ems="4"
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="password"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:textSize="@dimen/textSizeNormal" />


        <TextView
            android:id="@+id/loginResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff0300"
            android:textSize="20dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Autenticar"
            android:textSize="@dimen/textSizeNormal" />


    </LinearLayout>

</RelativeLayout>
