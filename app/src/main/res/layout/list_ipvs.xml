<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:hint="Nombre"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Inicio"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeNormal" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/especifico_app_primario" />

        <TextView
            android:id="@+id/textViewEntrada"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Entrada"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeNormal" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/especifico_app_primario" />

        <TextView
            android:id="@+id/textViewDisponible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="Disponible"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeMedium" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/especifico_app_primario" />

        <TextView
            android:id="@+id/textViewCosumido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="Cosumido"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeMedium" />

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/especifico_app_primario" />

        <TextView
            android:id="@+id/textViewFinal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:hint="Final"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeNormal" />

    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:background="@color/especifico_app_primario" />
</LinearLayout>