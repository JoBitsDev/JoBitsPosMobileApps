<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="firstdream.rm"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme">

        <service
            android:name="com.main.service.ReceiverService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="firstdream.rm.Main"
            android:label="@string/app_name">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:launchMode="singleTask" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="firstdream.rm.Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name="firstdream.rm.about"
            android:label="@string/title_activity_about"
            android:parentActivityName="firstdream.rm.Main"
            android:theme="@android:style/Theme.Dialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="firstdream.rm.Main" />
        </activity>
    </application>

</manifest>

