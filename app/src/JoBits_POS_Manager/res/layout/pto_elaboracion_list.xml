<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCodigoPto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/textViewNombrePto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/textViewMontoPto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto"
            android:textSize="33sp" />

    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextCodigoPto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="right"
            android:hint="Código"
            android:inputType="text"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextNombrePto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="right"
            android:hint="Nombre"
            android:inputType="text"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextMontoPto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="right"
            android:hint="0.0 CUC"
            android:inputType="numberSigned"
            android:textSize="30sp" />

    </LinearLayout>
</LinearLayout>