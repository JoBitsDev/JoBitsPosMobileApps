<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextUsuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="text"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/textViewOrden"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:baselineAligned="false"
            android:gravity="fill"
            android:text="Órdenes Atendidas"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextOrden"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:ems="10"
            android:gravity="center"
            android:hint="Órden"
            android:inputType="text"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMonto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="fill"
            android:text="Monto"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextMonto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:ems="10"
            android:gravity="center"
            android:hint="0.0 CUC"
            android:inputType="numberSigned"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/textViewPago"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="fill"
            android:text="Pago por Venta"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/editTextPago"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:ems="10"
            android:gravity="center"
            android:hint="0.0 CUC"
            android:inputType="numberSigned"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="50"
        android:background="@color/primario" />

</LinearLayout>