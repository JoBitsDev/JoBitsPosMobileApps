<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextUsuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="text"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/timbre_de_hotel" />

        <TextView
            android:id="@+id/editTextOrden"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:ems="10"
            android:hint="Ã“rden"
            android:inputType="text"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/montoxxxhdpi" />

        <TextView
            android:id="@+id/editTextMonto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:ems="10"
            android:hint="0.0 CUC"
            android:inputType="numberSigned"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/pagoxxxhdpi" />

        <TextView
            android:id="@+id/editTextPago"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:ems="10"
            android:hint="0.0 CUC"
            android:inputType="numberSigned"
            android:textColorHint="@color/texto_secundario"
            android:textSize="@dimen/textSizeLarge" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="50"
        android:background="@color/primario" />

</LinearLayout>