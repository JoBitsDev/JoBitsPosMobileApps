<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/especifico_app_primario"
    android:orientation="vertical"
    tools:context="com.activities.DetallesVentasActivity">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:clickable="false"
        android:gravity="center"
        android:text="Ventas Detalladas"
        android:textColor="@color/primario"
        android:textSize="@dimen/textSizeLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewBy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center"
        android:hint="De donde sale la lista"
        android:textColor="@color/primario"
        android:textSize="@dimen/textSizeNormal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@color/secundario"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOrdenar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:clickable="false"
            android:gravity="center"
            android:text="Ordenar por: "
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeExact20" />

        <Spinner
            android:id="@+id/spinnerOrdenar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextProducto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Producto"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/secundario" />

        <TextView
            android:id="@+id/editTextCantidad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Cantidad"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/secundario" />

        <TextView
            android:id="@+id/editTextPrecio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Precio"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/secundario" />

        <TextView
            android:id="@+id/editTextMonto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Monto"
            android:textColor="@color/primario"
            android:textSize="@dimen/textSizeNormal" />

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/secundario" />

    <ListView
        android:id="@+id/listViewVentas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="250" />
</LinearLayout>
