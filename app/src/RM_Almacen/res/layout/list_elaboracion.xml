<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewNombreInsumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:hint="Nombre"
        android:textColor="@color/texto_primario"
        android:textColorHint="@color/texto_secundario"
        android:textSize="@dimen/textSizeNormal" />

    <TextView
        android:id="@+id/textViewCant"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:hint="Cant"
        android:textColor="@color/texto_primario"
        android:textColorHint="@color/texto_secundario"
        android:textSize="@dimen/textSizeNormal" />

    <ImageButton
        android:id="@+id/buttonMas"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:adjustViewBounds="false"
        android:longClickable="true"
        android:onClick="onAddProductoClick"
        android:src="@android:drawable/ic_input_add"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeNormal"
        tools:src="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/buttonMenos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:onClick="onRemoveProductoClick"
        android:src="@drawable/minus"
        android:textColor="@color/texto_primario"
        android:textSize="@dimen/textSizeNormal"
        tools:src="@drawable/minus" />
</LinearLayout>