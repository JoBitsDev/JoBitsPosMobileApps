<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/texto_primario"
            android:textSize="@dimen/textSizeLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/entradaButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="fill"
            android:background="@null"
            android:onClick="onEntradaClick"
            android:scaleType="fitCenter"
            android:src="@drawable/entrada" />

        <ImageButton
            android:id="@+id/salidaButton"
            android:layout_height="50dp"
            android:layout_gravity="fill"
            android:background="@null"
            android:onClick="onSalidaRebajaClick"
            android:scaleType="fitCenter"
            android:src="@drawable/salida"
            tools:layout_width="50dp" />


        <TextView
            android:id="@+id/editPrecioPromedio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:autoText="false"
            android:gravity="start|center_vertical"
            android:text="Costo Medio: 17.00 CUC "
            android:textColor="@color/secundario"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/textCantidad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="10"
            android:gravity="center|right"
            android:text="#####"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textUM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="UM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/secundario"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/editTextStock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="(+150)" />

    </LinearLayout>


</LinearLayout>